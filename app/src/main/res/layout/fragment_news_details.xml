<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <com.corporateapp.fonts.RegularTextView
            android:id="@+id/tv_screenTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center|left"
            android:text="@string/txt_DevDetHd"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <!--<ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_phone_number"
            android:padding="10dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_phone_number"
            android:padding="10dp"/>-->
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".9">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight=".2">


                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:layout_alignParentTop="true"
                    android:background="@mipmap/icon_member_bkg" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight=".4"
                android:orientation="vertical"
                android:padding="15dp">

                <!--<android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/edtInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/txt_info"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>
        -->
                <!-- <android.support.design.widget.TextInputLayout
                     android:id="@+id/input_layout_hd"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:textColorHint="@color/black">

                     <EditText
                         android:id="@+id/edtDevHd"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:background="@android:color/transparent"
                         android:hint="@string/txt_devHd"
                         android:maxLength="30"
                         android:singleLine="true"
                         android:textColor="@color/black"
                         android:textColorHint="@color/grey"
                         android:textSize="15sp" />
                 </android.support.design.widget.TextInputLayout>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.corporateapp.fonts.RegularTextView
                        android:id="@+id/txtDevHd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@android:color/transparent"
                        android:singleLine="true"
                        android:text="Developement Heading"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:background="@android:color/transparent"
                        android:singleLine="true"
                        android:text="01/12/2017"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />

                <com.corporateapp.fonts.RegularTextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/txt_description"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="17sp" />

                <com.corporateapp.fonts.LightTextView
                    android:id="@+id/txtDevDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="nd d jbfbf fje jfejjje  jehhehjhhj jejhjehj ehehjhj jehjhehj ehhhjehj jehhehj bbehh ehh"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="15sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="0dip"
                android:layout_marginTop="30dp"
                android:layout_weight=".2"
                android:orientation="horizontal"
                android:padding="20dp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="0dip"
                    android:layout_height="40dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:text="@string/btn_back"
                    android:textColor="@color/white" />


            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>